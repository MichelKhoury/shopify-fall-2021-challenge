<p id="notice"><%= notice %></p>

<% if params[:search] != nil %>
  <h1>Search Results for: "<%= params[:search] %>"</h1>
<% else %>
  <h1>Search results for your image search:</h1>
<% end %>
<table class = "table table-bordered table-hover">
  <thead class = "table-dark">
    <tr>
      <th>Name</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_results.each do |image| %>
      <tr>
          <td><%= image.name %></td>
          <td><%= image.tags %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>